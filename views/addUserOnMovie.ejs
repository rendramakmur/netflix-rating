<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <title>Movie Detail & Add User</title>
</head>
<body>
    <%- include("partials/navbar") %>
    <div class="text-center mt-4">
        <h1>Movies Detail & Add User</h1>
    </div>
    <hr>
    <div class="row mt-3">
        <div class="col-sm-6">
            <h2 class="text-center">Movie Name</h2>
            <h3 class="text-center"><%= movie.name %></h3>
        </div>
        <div class="col-sm-6">
            <h2 class="text-center">Add User</h2>
            <form action="/movies/add/user/<%= movie.id  %>" method="POST">
                <div class="d-flex justify-content-center">
                    <div class="col-sm-5">
                        <div>
                            <select class="form-select mb-3" name="UserId">
                                <option value="">---Select User---</option>
                                <% users.forEach(user => { %>
                                    <option value="<%= user.id %>"><%= user.first_name %></option>
                                <% }) %>
                            </select>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="rating" placeholder="Rating" name="rating">
                                <label for="rating">Rating</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="comment" placeholder="Comment" name="comment">
                                <label for="comment">Comment</label>
                            </div>
                            <div class="d-flex justify-content-center mt-3">
                                <button type="submit" class="btn btn-dark">Submit</button>
                            </div>
                            <div class="text-center mt-3">
                                <% if (errors) { %>
                                  <% errors.forEach(error => { %>
                                    <p><%= error %></p>
                                  <% }) %>  
                               <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr>
    <div class="d-flex justify-content-center">
        <div class="col-sm-5">
            <table class="table">
                <thead class="text-center">
                  <tr>
                    <th scope="col">User</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Comment</th>
                  </tr>
                </thead>
                <tbody class="text-center">
                    <% movie.Users.forEach(user => { %>
                        <tr>
                            <td><%= user.first_name %></td>
                            <td><%= user.Rating.rating %></td>
                            <td><%= user.Rating.comment %></td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</body>
</html>