<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <title>Production Houses List</title>
</head>
<body>
    <%- include("partials/navbar", {userStatus: userStatus}) %>
    <div class="text-center mt-4">
        <h1>Production House List</h1>
    </div>
    <div class="d-flex justify-content-center mt-4">
        <div class="col-sm-7">
            <table class="table">
                <thead class="text-center">
                  <tr>
                    <th scope="col">Production House Name</th>
                    <th scope="col">Country</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody class="text-center">
                <% data.forEach(el => { %>
                    <tr>
                      <td><p><%= el.name %></p></td>
                      <td><p><%= el.country %></p></td>
                      <td><a href="/production-houses/edit/<%= el.id %>" class="btn btn-primary">Edit</a> <a href="production-houses/delete/<%= el.id %>" class="btn btn-danger" onclick="return confirm('Apakah anda yakin?')">Delete</a></td>
                    </tr>
                <% }) %>
                </tbody>
              </table>
        </div>
      </div>
      <div class="d-flex justify-content-center mt-4 mb-4">
        <a href="/production-houses/add" class="btn btn-dark">Add Production House</a>
    </div>
</body>
</html>